<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="Exhibition"
            type="com.example.smartmuseum.model.Exhibition" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/return_road_detail_rolling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/return_road_detail_rolling" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="263dp"
            android:layout_height="49dp"
            android:background="#FFFFFF"
            android:queryHint="搜索最新展物，展览资讯"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/bookbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="@string/background1"
            app:layout_constraintEnd_toStartOf="@+id/stepbutton"
            app:layout_constraintTop_toTopOf="@+id/stepbutton" />

        <ImageView
            android:id="@+id/setting_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:background="#FFFFFF"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="@+id/mainpage_myinfo_friends_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/mainpage_myinfo_friends_btn"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_myinfo_friends_btn" />

        <ImageView
            android:id="@+id/infobutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/stepbutton"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="@+id/stepbutton"
            app:layout_constraintTop_toBottomOf="@+id/stepbutton" />

        <ImageView
            android:id="@+id/fgbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/infobutton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/bookbutton"
            app:layout_constraintTop_toBottomOf="@+id/bookbutton" />

        <ImageView
            android:id="@+id/mainpage_myinfo_friends_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/stepbutton"
            app:layout_constraintTop_toTopOf="@+id/stepbutton" />

        <ImageView
            android:id="@+id/stepbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/searchView"
            app:layout_constraintStart_toStartOf="@+id/searchView"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/stepbutton"
            app:layout_constraintStart_toStartOf="@+id/stepbutton"
            app:layout_constraintTop_toTopOf="@+id/stepbutton"
            app:srcCompat="@mipmap/ar" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/setting_button"
            app:layout_constraintStart_toStartOf="@+id/setting_button"
            app:layout_constraintTop_toTopOf="@+id/setting_button"
            app:srcCompat="@mipmap/exhibition_book" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/mainpage_myinfo_friends_btn"
            app:layout_constraintStart_toStartOf="@+id/mainpage_myinfo_friends_btn"
            app:layout_constraintTop_toTopOf="@+id/mainpage_myinfo_friends_btn"
            app:srcCompat="@mipmap/exhibition_goods" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/bookbutton"
            app:layout_constraintStart_toStartOf="@+id/bookbutton"
            app:layout_constraintTop_toTopOf="@+id/bookbutton"
            app:srcCompat="@mipmap/exhibition_introduction" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/fgbutton"
            app:layout_constraintStart_toStartOf="@+id/fgbutton"
            app:layout_constraintTop_toTopOf="@+id/fgbutton"
            app:srcCompat="@mipmap/exhibition_tujian" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="@+id/infobutton"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="@+id/infobutton"
            app:layout_constraintTop_toTopOf="@+id/infobutton"
            app:srcCompat="@mipmap/exhibition_route" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="文创"
            app:layout_constraintEnd_toEndOf="@+id/imageView17"
            app:layout_constraintStart_toStartOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="图鉴"
            app:layout_constraintEnd_toEndOf="@+id/imageView19"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView19"
            app:layout_constraintTop_toBottomOf="@+id/imageView19" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路线"
            app:layout_constraintEnd_toEndOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toBottomOf="@+id/imageView20" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约"
            app:layout_constraintEnd_toEndOf="@+id/imageView16"
            app:layout_constraintStart_toStartOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/imageView16" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/back_white" />

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/navigation_white" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="欢迎来到"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/exhibition_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/exhibition_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="huiguizhilu"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/searchView"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.918" />

        <TextView
            android:id="@+id/exhibition_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hall"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/exhibition_name"
            app:layout_constraintTop_toTopOf="@+id/exhibition_name" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toStartOf="@+id/exhibition_hall"
            app:layout_constraintStart_toEndOf="@+id/exhibition_name"
            app:layout_constraintTop_toTopOf="@+id/exhibition_hall"
            app:srcCompat="@mipmap/navigation_location_white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>