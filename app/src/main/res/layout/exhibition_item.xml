<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.smartmuseum.model.Exhibition" />

        <variable
            name="exhibitionInfo"
            type="Exhibition" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/exhibition_image"
            android:layout_width="396dp"
            android:layout_height="429dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?android:attr/textCursorDrawable" />

        <TextView
            android:id="@+id/exhibition_name"
            android:layout_width="189dp"
            android:layout_height="43dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="28dp"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="@+id/exhibition_image"
            app:layout_constraintTop_toTopOf="@+id/exhibition_image" />

        <TextView
            android:id="@+id/exhibition_state"
            android:layout_width="189dp"
            android:layout_height="34dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/exhibition_name"
            app:layout_constraintTop_toBottomOf="@+id/exhibition_name" />

        <TextView
            android:id="@+id/exhibition_passenger_flow"
            android:layout_width="189dp"
            android:layout_height="37dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/exhibition_state"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/exhibition_image"
            app:layout_constraintTop_toBottomOf="@+id/exhibition_state" />

        <ImageView
            android:id="@+id/exhibition_like"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="36dp"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="@+id/exhibition_image"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/exhibition_name"
            app:layout_constraintTop_toTopOf="@+id/exhibition_image"
            app:srcCompat="@mipmap/mainpage_exhibition_like_not_selected" />

        <ImageView
            android:id="@+id/backgroundpicture"
            android:layout_width="281dp"
            android:layout_height="99dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/exhibition_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="?attr/actionModeBackground" />

        <TextView
            android:id="@+id/exhibition_hall"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:text="TextView"
            android:textColor="#111111"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/backgroundpicture"
            app:layout_constraintTop_toTopOf="@+id/backgroundpicture" />

        <TextView
            android:id="@+id/exhibition_time"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:text="TextView"
            android:textColor="#111111"
            app:layout_constraintStart_toStartOf="@+id/backgroundpicture"
            app:layout_constraintTop_toBottomOf="@+id/exhibition_hall" />

        <TextView
            android:id="@+id/exhibition_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textColor="#842d29"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/backgroundpicture"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/exhibition_time"
            app:layout_constraintTop_toTopOf="@+id/backgroundpicture" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>