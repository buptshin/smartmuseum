<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Charitiable_image"
                android:layout_width="0dp"
                android:layout_height="195dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline104"
                app:layout_constraintStart_toStartOf="@+id/guideline103"
                app:layout_constraintTop_toTopOf="@+id/guideline76"
                app:layout_constraintVertical_bias="0.031"
                app:srcCompat="@drawable/charitable_actitvities" />


            <ImageView
                android:id="@+id/family_image"
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline104"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="@+id/guideline103"
                app:layout_constraintTop_toBottomOf="@+id/Charitiable_image"
                app:srcCompat="@drawable/family_activities" />

            <TextView
                android:id="@+id/family_cativity_text"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:text="@string/family_activity_text"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/family_image"
                app:layout_constraintEnd_toEndOf="@+id/family_image"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/family_image"
                app:layout_constraintTop_toTopOf="@+id/family_image"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/charitiable_text2"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="@string/family_activity"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/Charitiable_image"
                app:layout_constraintEnd_toEndOf="@+id/Charitiable_image"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/Charitiable_image"
                app:layout_constraintTop_toTopOf="@+id/Charitiable_image"
                app:layout_constraintVertical_bias="0.851" />

            <TextView
                android:id="@+id/textView_under_charitiable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charitiable_number"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/Charitiable_image"
                app:layout_constraintEnd_toEndOf="@+id/Charitiable_image"
                app:layout_constraintStart_toStartOf="@+id/Charitiable_image"
                app:layout_constraintTop_toBottomOf="@+id/charitiable_text2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_under_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family_activity_number"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/family_image"
                app:layout_constraintEnd_toEndOf="@+id/family_image"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="@+id/family_image"
                app:layout_constraintTop_toBottomOf="@+id/family_cativity_text"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline76"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>