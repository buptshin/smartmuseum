<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/SearchButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/mainpage_search" />

        <TextView
            android:id="@+id/ExplorerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:text="@string/explore_text"
            android:textColor="#111111"
            android:textSize="45sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/recommendedroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            app:layout_constraintStart_toEndOf="@+id/activity"
            app:layout_constraintTop_toBottomOf="@+id/ExplorerTextView"
            app:srcCompat="@mipmap/mainpage_recommendedroute_not_selected" />

        <ImageButton
            android:id="@+id/exhibition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExplorerTextView"
            app:srcCompat="@mipmap/exhibition_not_selected" />

        <TextView
            android:id="@+id/exhibition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/exhibition_text"
            app:layout_constraintEnd_toEndOf="@+id/exhibition"
            app:layout_constraintStart_toStartOf="@+id/exhibition"
            app:layout_constraintTop_toBottomOf="@+id/exhibition" />

        <TextView
            android:id="@+id/activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/activity_text"
            android:textColor="@color/mainpage_navigation_selectoritem_primary_color_selected"
            app:layout_constraintEnd_toEndOf="@+id/activity"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="@+id/activity"
            app:layout_constraintTop_toBottomOf="@+id/activity" />

        <TextView
            android:id="@+id/recomendedroute_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/recomendedroute_text"
            app:layout_constraintEnd_toEndOf="@+id/recommendedroute"
            app:layout_constraintStart_toStartOf="@+id/recommendedroute"
            app:layout_constraintTop_toBottomOf="@+id/recommendedroute" />

        <ImageButton
            android:id="@+id/bookvisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            app:layout_constraintStart_toEndOf="@+id/recommendedroute"
            app:layout_constraintTop_toBottomOf="@+id/ExplorerTextView"
            app:srcCompat="@mipmap/mainpage_bookvisit_not_selected" />

        <TextView
            android:id="@+id/bookvisit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:gravity="center"
            android:text="@string/bookvisit_text"
            app:layout_constraintEnd_toEndOf="@+id/bookvisit"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/bookvisit"
            app:layout_constraintTop_toBottomOf="@+id/bookvisit" />

        <ImageButton
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            app:layout_constraintStart_toEndOf="@+id/exhibition"
            app:layout_constraintTop_toBottomOf="@+id/ExplorerTextView"
            app:srcCompat="@mipmap/activity_selected" />

        <ImageView
            android:id="@+id/Charitiable_image"
            android:layout_width="339dp"
            android:layout_height="225dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.446"
            app:srcCompat="@drawable/charitable_actitvities" />

        <ImageView
            android:id="@+id/family_image"
            android:layout_width="336dp"
            android:layout_height="221dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.962"
            app:srcCompat="@drawable/family_activities" />

        <TextView
            android:id="@+id/family_cativity_text"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:layout_marginTop="152dp"
            android:gravity="center"
            android:text="@string/family_activity_text"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/family_image"
            app:layout_constraintEnd_toEndOf="@+id/family_image"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/family_image"
            app:layout_constraintTop_toBottomOf="@+id/Charitiable_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/charitiable_text2"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="@string/family_activity"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/Charitiable_image"
            app:layout_constraintEnd_toEndOf="@+id/Charitiable_image"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/Charitiable_image"
            app:layout_constraintTop_toTopOf="@+id/Charitiable_image"
            app:layout_constraintVertical_bias="0.814" />

        <TextView
            android:id="@+id/textView_under_charitiable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charitiable_number"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/Charitiable_image"
            app:layout_constraintEnd_toEndOf="@+id/Charitiable_image"
            app:layout_constraintStart_toStartOf="@+id/Charitiable_image"
            app:layout_constraintTop_toBottomOf="@+id/charitiable_text2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_under_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_activity_number"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/family_image"
            app:layout_constraintEnd_toEndOf="@+id/family_image"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/family_image"
            app:layout_constraintTop_toBottomOf="@+id/family_cativity_text"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>