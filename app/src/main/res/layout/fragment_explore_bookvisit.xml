<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/national_museum_line_picture" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择日期"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <TextView
                        android:id="@+id/textView115"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/friend_view_start_border"
                        android:gravity="center"
                        android:text="1-15"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView119"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="56dp"
                        android:gravity="center"
                        android:text="1-19"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/textView115"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView117"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="56dp"
                        android:layout_marginEnd="64dp"
                        android:gravity="center"
                        android:text="1-17"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/textView115"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView118"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="56dp"
                        android:gravity="center"
                        android:text="1-18"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView115"
                        app:layout_constraintStart_toStartOf="@+id/textView115"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView116"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="1-16"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/textView115"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView114"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="64dp"
                        android:gravity="center"
                        android:text="1-14"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/textView115"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择时间"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_selected1"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="48dp"
                        android:gravity="center"
                        android:text="9:00-11:30"
                        app:layout_constraintBottom_toBottomOf="@+id/time_selected2"
                        app:layout_constraintEnd_toStartOf="@+id/time_selected2"
                        app:layout_constraintTop_toTopOf="@+id/time_selected2" />

                    <TextView
                        android:id="@+id/time_selected2"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/friend_view_start_border"
                        android:gravity="center"
                        android:text="12:30-14:00"
                        android:textColor="#ffffff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/time_selected3"
                        android:layout_width="82dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="48dp"
                        android:gravity="center"
                        android:text="14:00-16:00"
                        app:layout_constraintBottom_toBottomOf="@+id/time_selected2"
                        app:layout_constraintStart_toEndOf="@+id/time_selected2"
                        app:layout_constraintTop_toTopOf="@+id/time_selected2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择人数"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/people_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/minus_passengers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/people_number"
                        app:layout_constraintEnd_toStartOf="@+id/people_number"
                        app:layout_constraintTop_toTopOf="@+id/people_number"
                        app:srcCompat="@mipmap/goods_info_detail_goods_num_decrease" />

                    <ImageView
                        android:id="@+id/plus_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/people_number"
                        app:layout_constraintStart_toEndOf="@+id/people_number"
                        app:layout_constraintTop_toTopOf="@+id/people_number"
                        app:srcCompat="@mipmap/goods_info_detail_goods_num_add" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="信息登记"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp">

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="346dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="葫小芦"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView53"
                        app:layout_constraintTop_toBottomOf="@+id/textView53" />

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="346dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="11010219971125xxxx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView53"
                        app:layout_constraintTop_toBottomOf="@+id/textView54" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="346dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="138245"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView53"
                        app:layout_constraintTop_toBottomOf="@+id/textView58" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="346dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1861058xxxx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView53"
                        app:layout_constraintTop_toBottomOf="@+id/textView56" />

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:text="姓名"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="身份证号"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText2" />

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="手机号"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText4" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="验证码"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText5" />

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="95dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/friend_view_start_border"
                        android:gravity="center"
                        android:text="发送验证码"
                        android:textColor="#ffffff"
                        app:layout_constraintBottom_toBottomOf="@+id/editText5"
                        app:layout_constraintEnd_toEndOf="@+id/editText5"
                        app:layout_constraintTop_toTopOf="@+id/editText5"
                        app:layout_constraintVertical_bias="0.4" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择服务"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <ListView
                    android:id="@+id/service_list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/friend_view_start_border"
                        android:gravity="center"
                        android:text="完成预定"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>