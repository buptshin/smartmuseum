<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.example.smartmuseum.model.NavigationFlagModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainpage_navigation_red"
        android:paddingTop="@dimen/mainpage_fragment_paddingTop">

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:text="导览"
            android:textColor="@color/mainpage_navigation_white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mainpage_navigation_firstaid_search_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mainpage_navigation_search_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_floor_b1_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/mainpage_navigation_circle_gray_tv_bg"
            android:gravity="center"
            android:text="B1"
            android:textColor="@color/mainpage_navigation_selectoritem_wordcolor_black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_tv"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_floor_1_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mainpage_navigation_circle_gray_tv_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/mainpage_navigation_selectoritem_wordcolor_black"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/mainpage_navigation_firstaid_floor_b1_tv"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_tv"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_floor_2_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mainpage_navigation_circle_gray_tv_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/mainpage_navigation_selectoritem_wordcolor_black"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/mainpage_navigation_firstaid_floor_1_tv"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_tv"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_floor_3_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mainpage_navigation_circle_red_tv_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/mainpage_navigation_white"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/mainpage_navigation_firstaid_floor_2_tv"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_tv"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/mainpage_navigation_firstaid_floor_4_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mainpage_navigation_circle_gray_tv_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/mainpage_navigation_selectoritem_wordcolor_black"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/mainpage_navigation_firstaid_floor_3_tv"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_tv"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/mainpage_navigation_firstaid_location_map_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/mainpage_navigation_escape_route_map"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_floor_b1_tv"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/mainpage_navigation_call_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/mainpage_navigation_call_help_white"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_firstaid_location_map_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/mainpage_navigation_firstaid_now_location_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/mainpage_navigation_location_white"
            app:layout_constraintTop_toBottomOf="@+id/mainpage_navigation_call_help"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>