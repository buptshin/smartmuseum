<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/exhibition_content_search_background">

        <ImageView
            android:id="@+id/exhibition_dialog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/returnroad_detail_dialog_image" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="这是一条回归之路。\n这也是一条中华民族梦圆之路。\n中华民族延绵五千年所孕育创造的\n璀璨文化，是中华民族根混所寄、\n中华儿女精神所系。"
            android:textColor="#111111"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/exhibition_dialog_image"
            app:layout_constraintStart_toStartOf="@+id/exhibition_dialog_image"
            app:layout_constraintTop_toBottomOf="@+id/exhibition_dialog_image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintEnd_toEndOf="@+id/exhibition_dialog_image"
            app:layout_constraintStart_toStartOf="@+id/exhibition_dialog_image"
            app:layout_constraintTop_toBottomOf="@+id/textView22"/>
        <ImageView
            android:id="@+id/guanbi_dialog"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="@+id/exhibition_dialog_image"
            app:layout_constraintTop_toTopOf="@+id/exhibition_dialog_image"
            app:srcCompat="@mipmap/guanbi" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>