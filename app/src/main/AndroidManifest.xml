<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartmuseum">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.goods.GoodsInfoDetailActivity"></activity>
        <activity android:name=".view.goods.GoodsRecommendActivity" />
        <activity android:name=".view.forgetpwd.ForgetPwdActivity"></activity>
        <activity android:name=".view.startpage.StartActivity" />
        <activity android:name=".view.register.RegisterActivity" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.mainpage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.goods.GoodsOrderStatusActivity"></activity>
        <activity android:name=".view.goods.GoodsOrderDeliveryActivity"/>
        <activity android:name=".view.routecommend.RouteCommendInfoActivity"/>
        <activity android:name=".view.goods.GoodsCreditCardPayActivity" />
        <activity android:name=".view.goods.GoodsPayTypeActivity" />
        <activity android:name=".view.goods.GoodsChooseAddressActivity" />
        <activity
            android:name=".view.goods.GoodsInfoActivity"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>