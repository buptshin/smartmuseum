        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.navigation.exhibition.ExhibitsDetailsActivity"></activity>
        <activity
            android:name=".view.navigation.InHelpingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/transcutestyle" />
        <activity
            android:name=".view.navigation.ConfirmHelpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/transcutestyle" />
        <activity android:name=".view.navigation.NavigationGoRoutesActivity" />
        <activity android:name=".view.goods.GoodsInfoDetailActivity" />
        <activity android:name=".view.goods.GoodsRecommendActivity" />
        <activity android:name=".view.forgetpwd.ForgetPwdActivity" />
        <activity android:name=".view.register.RegisterActivity" />
