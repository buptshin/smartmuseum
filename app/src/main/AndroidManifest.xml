        <activity android:name=".view.goods.GoodsPayTypeActivity" />
        <activity android:name=".view.goods.GoodsChooseAddressActivity" />
        <activity android:name=".view.navigation.NavigationSearchActivity" />
        <activity
            android:name=".view.goods.GoodsInfoActivity"
            android:launchMode="singleTask" />
        <activity android:name=".view.goods.GoodsOrderCheckActivity" />
        <activity
            android:name=".view.me.settings.SettingsActivity"
            android:theme="@style/SettingsTheme" />
        <activity android:name=".view.startpage.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>